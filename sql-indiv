---------------------------------------------
-- 1. Create SQL Server Login (at server level)
---------------------------------------------
CREATE LOGIN MyLoginName
WITH PASSWORD = 'StrongPassword123!',
GO

----------------------------------------------------
-- 2. Select the database where the user will live
----------------------------------------------------
USE MyDatabase;
GO

---------------------------------------------
-- 3. Create a User inside the database
---------------------------------------------
CREATE USER MyUserName
FOR LOGIN MyLoginName;
GO

---------------------------------------------------------
-- 4. Grant READ / WRITE / EXECUTE permission to the user
---------------------------------------------------------

ALTER ROLE db_datareader ADD MEMBER MyUserName;
Go
ALTER ROLE db_datawriter ADD MEMBER MyUserName;
GO

-- Grant execute access for stored procedures and functions
GRANT EXECUTE TO MyUserName;
GO
